		$tmpArray = array(
			"supplierSku" =>$supplierSku,
			"sku"=> $sku,
			"name" =>$name,
			"qty" =>$qty
			);

		//count number of elements and append new element to array
		$arrayLng = count($productsArray[$supplier]);
		$productsArray[$supplier][$arrayLng] = $tmpArray;

		//IMPORTANT: with the "unset" you clear the variable
		unset($arrayLng);
		unset($tmpArray);
